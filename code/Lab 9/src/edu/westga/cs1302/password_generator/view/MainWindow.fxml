<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="366.0" minWidth="215.0" prefHeight="399.0" prefWidth="215.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs1302.password_generator.view.MainWindow">
   <children>
      <TextField fx:id="minimumLength" layoutX="116.0" layoutY="65.0" prefHeight="25.0" prefWidth="41.0" />
      <CheckBox fx:id="mustIncludeDigits" layoutX="12.0" layoutY="98.0" mnemonicParsing="false" text="Must Include Digits" />
      <CheckBox fx:id="mustIncludeLowerCaseLetters" layoutX="13.0" layoutY="128.0" mnemonicParsing="false" text="Must Include Lower Case Letters" />
      <CheckBox fx:id="mustIncludeUpperCaseLetters" layoutX="12.0" layoutY="153.0" mnemonicParsing="false" text="Must Include Upper Case Letters" />
      <Button fx:id="generatePasswordButton" layoutX="46.0" layoutY="181.0" mnemonicParsing="false" text="Generate Password" />
      <Label layoutX="14.0" layoutY="69.0" text="Minimum Length" />
      <TextArea fx:id="output" layoutX="12.0" layoutY="216.0" prefHeight="169.0" prefWidth="193.0" wrapText="true" />
      <Label fx:id="errorTextLabel" layoutX="6.0" layoutY="41.0" prefHeight="17.0" prefWidth="199.0" textFill="RED" />
      <MenuBar prefHeight="25.0" prefWidth="215.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="aboutMenuItem" text="_About">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem fx:id="closeMenuItem" text="_Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
